# ============================================
# 环境变量配置示例
# ============================================
# 
# 使用说明：
# 1. 复制此文件为 .env.local 用于本地开发
# 2. 不要将 .env.local 提交到版本控制
# 3. 生产环境通过 CI/CD 或云平台注入环境变量
#
# ============================================

# --------------------------------------------
# 应用基础配置
# --------------------------------------------

# 环境名称 (development | test | staging | production)
NEXT_PUBLIC_ENV=development

# 应用版本（用于错误追踪）
NEXT_PUBLIC_APP_VERSION=1.0.0

# 是否显示管理员功能 (0 | 1)
NEXT_PUBLIC_SHOW_ADMIN=0

# 应用名称
NEXT_PUBLIC_APP_NAME=AiCoin OS

# 应用描述
NEXT_PUBLIC_APP_DESCRIPTION=企业级项目管理系统

# --------------------------------------------
# API 配置
# --------------------------------------------

# API 基础地址
NEXT_PUBLIC_API_URL=http://localhost:3000/api

# API 超时时间（毫秒）
NEXT_PUBLIC_API_TIMEOUT=30000

# GraphQL API 端点
NEXT_PUBLIC_GRAPHQL_ENDPOINT=http://localhost:3000/graphql

# API 版本
NEXT_PUBLIC_API_VERSION=v1

# --------------------------------------------
# 安全配置
# --------------------------------------------

# localStorage 加密密钥（32位随机字符串）
# 生成方式：node -e "console.log(require('crypto').randomBytes(16).toString('hex'))"
NEXT_PUBLIC_STORAGE_KEY=your-32-char-random-key-here-replace-me

# CSRF Token 端点
NEXT_PUBLIC_CSRF_ENDPOINT=http://localhost:3000/api/csrf-token

# JWT 密钥（用于 token 验证）
JWT_SECRET=your-jwt-secret-key-here

# 会话密钥（用于 session 加密）
SESSION_SECRET=your-session-secret-key-here

# --------------------------------------------
# 数据库配置（后端专用，不要添加 NEXT_PUBLIC_ 前缀）
# --------------------------------------------

# 数据库连接字符串
# DATABASE_URL=postgresql://user:password@localhost:5432/database

# Redis 连接字符串
# REDIS_URL=redis://localhost:6379

# 数据库连接池大小
# DATABASE_POOL_SIZE=10

# 数据库连接超时
# DATABASE_TIMEOUT=30000

# --------------------------------------------
# 监控和日志
# --------------------------------------------

# Sentry DSN（错误监控）
# 获取方式：https://sentry.io/ 注册并创建项目
NEXT_PUBLIC_SENTRY_DSN=

# 日志服务端点（可选）
NEXT_PUBLIC_LOG_ENDPOINT=

# 是否启用性能监控 (true | false)
NEXT_PUBLIC_ENABLE_PERFORMANCE_MONITORING=false

# 日志级别 (debug | info | warn | error)
LOG_LEVEL=info

# --------------------------------------------
# 功能开关
# --------------------------------------------

# 是否启用分析统计 (true | false)
NEXT_PUBLIC_ENABLE_ANALYTICS=false

# Google Analytics ID（可选）
NEXT_PUBLIC_GA_ID=

# 是否启用 A/B 测试 (true | false)
NEXT_PUBLIC_ENABLE_AB_TESTING=false

# 是否启用实时通知 (true | false)
NEXT_PUBLIC_ENABLE_NOTIFICATIONS=true

# 是否启用离线模式 (true | false)
NEXT_PUBLIC_ENABLE_OFFLINE=false

# --------------------------------------------
# 第三方服务
# --------------------------------------------

# 文件上传服务配置
NEXT_PUBLIC_UPLOAD_MAX_SIZE=10485760
NEXT_PUBLIC_UPLOAD_ALLOWED_TYPES=image/*,application/pdf

# CDN 地址（可选）
NEXT_PUBLIC_CDN_URL=

# 邮件服务配置（后端专用）
# SMTP_HOST=smtp.example.com
# SMTP_PORT=587
# SMTP_USER=your-email@example.com
# SMTP_PASSWORD=your-password
# SMTP_SECURE=false

# --------------------------------------------
# 权限和认证
# --------------------------------------------

# 认证服务端点
NEXT_PUBLIC_AUTH_ENDPOINT=http://localhost:3000/api/auth

# 权限检查端点
NEXT_PUBLIC_PERMISSION_ENDPOINT=http://localhost:3000/api/permissions

# 用户信息端点
NEXT_PUBLIC_USER_ENDPOINT=http://localhost:3000/api/user

# 是否启用权限检查 (true | false)
NEXT_PUBLIC_ENABLE_PERMISSIONS=true

# 默认用户角色
NEXT_PUBLIC_DEFAULT_ROLE=user

# --------------------------------------------
# 开发工具
# --------------------------------------------

# 是否显示调试信息 (true | false)
NEXT_PUBLIC_DEBUG=false

# 是否启用 React DevTools (true | false)
NEXT_PUBLIC_REACT_DEVTOOLS=true

# 是否显示性能指标 (true | false)
NEXT_PUBLIC_SHOW_PERFORMANCE=false

# 是否启用热重载 (true | false)
NEXT_PUBLIC_HOT_RELOAD=true

# --------------------------------------------
# 测试配置
# --------------------------------------------

# 测试数据库 URL
# TEST_DATABASE_URL=postgresql://user:password@localhost:5432/test_database

# 测试环境标识
NEXT_PUBLIC_TEST_MODE=false

# 测试用户 ID（用于测试环境）
NEXT_PUBLIC_TEST_USER_ID=test-user-123

# --------------------------------------------
# 国际化配置
# --------------------------------------------

# 默认语言
NEXT_PUBLIC_DEFAULT_LOCALE=zh-CN

# 支持的语言列表
NEXT_PUBLIC_SUPPORTED_LOCALES=zh-CN,en-US

# 时区设置
NEXT_PUBLIC_TIMEZONE=Asia/Shanghai

# --------------------------------------------
# 缓存配置
# --------------------------------------------

# 缓存过期时间（秒）
NEXT_PUBLIC_CACHE_TTL=3600

# 是否启用缓存 (true | false)
NEXT_PUBLIC_ENABLE_CACHE=true

# 缓存存储类型 (memory | redis | localStorage)
NEXT_PUBLIC_CACHE_STORAGE=localStorage

# --------------------------------------------
# 安全策略
# --------------------------------------------

# 内容安全策略
NEXT_PUBLIC_CSP_REPORT_URI=

# 是否启用 HTTPS 重定向 (true | false)
NEXT_PUBLIC_FORCE_HTTPS=false

# 是否启用安全头 (true | false)
NEXT_PUBLIC_ENABLE_SECURITY_HEADERS=true

# --------------------------------------------
# 注意事项
# --------------------------------------------
#
# 1. NEXT_PUBLIC_ 前缀的变量会暴露给客户端，不要存储敏感信息
# 2. 生产环境必须设置强随机密钥和正确的 API 地址
# 3. Sentry DSN 和其他服务密钥应通过环境变量注入
# 4. 本地开发可以使用 .env.local 覆盖这些默认值
# 5. 修改环境变量后需要重启开发服务器
# 6. 数据库和邮件配置仅用于后端，不要添加 NEXT_PUBLIC_ 前缀
# 7. 测试环境变量仅在测试时使用
# 8. 所有密钥都应该使用强随机字符串
#
# ============================================


